{
  "include": ["./src/*", "./index.d.ts"],
  "exclude": ["node_modules", "lib"],
  "compilerOptions": {
    "target": "ES2016",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./lib",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "sourceMap": true
  }
}
